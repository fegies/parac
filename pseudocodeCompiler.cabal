category:            Development
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

executable pseudocodeCompiler
  main-is:             Main.hs
  other-modules:       Parser.Parser, Parser.Lexer, Ast.Dump, Ast.ExprTree, Ast.Expression, Ast.Type, Helpers.ErrorReport,
    Helpers.HexMod, Normalize, Normalize.Desugar, Normalize.FoldConstants, Parser.Tokens, Typecheck.Typecheck
